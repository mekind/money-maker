# Application Configuration
APP_NAME=Money Management Service
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///./money_management.db
# For PostgreSQL: postgresql://user:password@localhost:5432/money_management

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Market Data Configuration
DEFAULT_MARKET_INDEX=^GSPC
DEFAULT_CURRENCY=USD
MARKET_DATA_CACHE_TTL=300

# Risk Management Defaults
DEFAULT_RISK_FREE_RATE=0.04
DEFAULT_POSITION_SIZE_PERCENT=0.05
MAX_POSITION_SIZE_PERCENT=0.20
DEFAULT_STOP_LOSS_PERCENT=0.05

# Alert Configuration
ENABLE_EMAIL_ALERTS=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password_here
ALERT_RECIPIENT_EMAIL=recipient@example.com

# Decision Engine Configuration
MIN_CONFIDENCE_THRESHOLD=0.60
ENABLE_AI_REASONING=True
AI_MODEL=claude-sonnet-4-5-20250929

# Backtesting Configuration
DEFAULT_INITIAL_CAPITAL=100000
DEFAULT_BACKTEST_START_DATE=2023-01-01
TRANSACTION_COST_PERCENT=0.001

# UI Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_THEME=dark

# Feature Flags
ENABLE_LIVE_TRADING=False
ENABLE_PAPER_TRADING=True
ENABLE_ALERTS=True
ENABLE_BACKTESTING=True
